{
  "manifest_version": 2,

  "name": "phrasal",
  "description": "This extension will compare a highlighted phrase with a database of news info",
  "version": "1.0",
  "browser_action": {
   "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["indexTab.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["getHighlighted.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
         "tabs",
         "https://*/*"
       ]
}
